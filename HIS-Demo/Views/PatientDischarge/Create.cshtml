@model HISDemo.Models.Patient
@{
    ViewBag.Title = "Create";
}
<style type="text/css">
    label
    {
        width: 40%;
    }
    #red
    {
        color: Red;
    }
</style>
<link href="../../js/formDesign/validationEngine.jquery.css" rel="stylesheet" type="text/css" />
<script src="../../js/formDesign/jquery.validationEngine.js" type="text/javascript"></script>
<script src="../../js/formDesign/jquery.validationEngine-en.js" type="text/javascript"></script>
<script src="../../js/formDesign/jquery.maskedinput-1.3.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#leftMenu").hide("slow");
    $(document).ready(function (e) {
        $("#leftMenu").hide("slow");
        $("#lastChild").click(function () {

            $("#leftMenu").hide("slow");
            $("#Close").show("slow");
        });
        $("#Close").click(function () {

            $("#leftMenu").show("slow");
            $("#Close").hide("slow");
        });
        $(".arrowImage").each(function () {
            $(this).click(function () {
                $(this).parent().parent().find("div").toggle("slow");
                $(this).attr("style", "webkit-transform: rotate(180deg)");
            });
        });
    });
    function Closechecked() {
        var answer = confirm("Do you really want to close window ?")
        if (answer) {
            window.close();
        }

        return false;
    }
</script>
<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery("#pform").validationEngine('attach', { promptPosition: "centerRight" });

    });
</script>
<style type="text/css">
    .tcol
    {
        -moz-column-count: 2;
        -moz-column-gap: 5pxpx;
        -webkit-column-count: 2;
        -webkit-column-gap: 5pxpx;
        column-count: 2;
        column-gap: 5pxpx;
    }
</style>
@section Header {
    <h2>
        Patient Discharge Detail</h2>
    <a href="@Url.Action("Index", "Home")" data-role="button" data-icon="home" data-theme="e" data-iconpos="notext">
    </a>
      <a href="@Url.Action("Index", "Home")" data-role="button" data-icon="logout" data-theme="e" data-iconpos="notext">
    </a>
}
@section Footer {
  <div data-role="controlgroup" data-type="horizontal" data-inset="true"
 style="text-align: center;">
    
        <button data-icon="plus" title="Add new patient" data-iconpos="notext" data-theme="c">
           </button>
        <button data-icon="grid" title="Admit patient" data-theme="c" data-iconpos="notext">
           </button>
        <button data-icon="info" title="Medication for patient"  data-theme="c" data-iconpos="notext">
           
          </button>
        <button data-icon="refresh" title="Add new patient" data-theme="c" data-iconpos="notext">
            </button>

  <button data-icon="star" title="Add new patient" data-theme="e" data-iconpos="notext">
            </button>
    </div>
    }



<div data-role="content" data-theme="e">
    <form action="/PatientDischarge/Create" id="pform" method="post">
    <div data-role="collapsible" data-inset="true" data-content-theme="d">
        <h3>
            Patient [ @Model.LastName @Model.FirstName ] Personal Detail</h3>
        <div class="tcol" data-role="fieldcontain">
            <label for="LastName">
                Last Name <span id="red">*</span></label>
            <input id="LastName" class="validate[required] text-input" name="LastName" type="text"
                value="@Model.LastName" />
            <label for="FirstName">
                First Name <span id="red">*</span></label>
            <input  class="validate[required] text-input" id="FirstName" name="FirstName" type="text" value="@Model.FirstName"/>
        </div>
        <div class="tcol" data-role="fieldcontain">
            <label for="SSN">
                Social Security
            </label>
            <input class="validate[required,custom[integer]] text-input" id="SSN" name="SSN"
                type="text" value="@Model.SSN" />
            <label for="MaritalStatus">
                Status
            </label>
            @Html.EditorFor(model => model.MaritalStatus)
            @Html.ValidationMessageFor(model => model.MaritalStatus)
        </div>
        <div class="tcol" data-role="fieldcontain">
            <label for="DOB">
                Date Of Birth
            </label>
            <input name="DOB" value="@Model.DOB"  class="" id="DOB" type="date" data-role="datebox" data-options='{"mode": "flipbox"}'/>
            <fieldset data-role="controlgroup" data-type="horizontal">
                <legend>Gender </legend>
                <input type="radio" name="GenderMale" id="GenderMale" value="Male" checked="checked" />
                <label for="GenderMale">
                    Male</label>
                <input type="radio" name="Gender" id="Gender" value="Female" />
                <label for="Gender">
                    Female</label>
            </fieldset>
        </div>
    </div>
    <div data-role="collapsible" data-inset="true" data-collapsed="false" data-content-theme="d">
        <h3>
            Patient Discharge Detail</h3>
        <div class="tcol" data-role="fieldcontain">
            <label for="LastName">
                Hospital</label>
            @Html.EditorFor(model => model.Hospital)
            @Html.ValidationMessageFor(model => model.Hospital)
            <label for="FirstName">
                Hospitalist</label>
            @Html.EditorFor(model => model.Hospitalist)
            @Html.ValidationMessageFor(model => model.Hospitalist)
        </div>
        <div class="tcol" data-role="fieldcontain">
            <label for="PCP">
                PCP</label>
            @Html.EditorFor(model => model.PCP)
            @Html.ValidationMessageFor(model => model.PCP)
            <label for="PrimaryDiagnosis">
                Admit Date</label>
            @Html.EditorFor(model => model.DOA)
            @Html.ValidationMessageFor(model => model.DOA)
        </div>
        <div class="tcol" data-role="fieldcontain">
            <label for="PrimaryDiagnosis">
                Primary Diagnosis</label>
            @Html.EditorFor(model => model.PrimaryDiagnosis)
            @Html.ValidationMessageFor(model => model.PrimaryDiagnosis)
            <label for="FirstName">
                Discharge Date<span id="red">*</span></label>
            @Html.EditorFor(model => model.ReferringPhysician)
            @Html.ValidationMessageFor(model => model.ReferringPhysician)
        </div>
        <div class="tcol" data-role="fieldcontain">
            <label for="Room">
                Room</label>
            @Html.EditorFor(model => model.Room)
            @Html.ValidationMessageFor(model => model.Room)
            <label for="Floor">
                Floor</label>
            @Html.EditorFor(model => model.Floor)
            @Html.ValidationMessageFor(model => model.Floor)
        </div>
     
    </div>
    <div class="ui-grid-c" data-content-theme="d" style="text-align: right;">
        <input type="button" data-role="button" data-inline="true" data-theme="a" id="closewindow"
            onclick="return Closechecked();" value="Close" />
        <input type="submit" data-role="button" data-inline="true" data-theme="a" value="Next" />
        <input type="reset" data-role="button" data-inline="true" data-theme="a" value="Reset" />
    </div>
    </form>
</div>
