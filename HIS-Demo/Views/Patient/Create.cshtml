                        value: $.trim($("State", this).text()) + ",[ " +
							($.trim($("StateCode", this).text())+"]" || "(unknown Code)"),
                        id: $("State", this).text()
                    };
                }).get();
                $("#State").autocomplete({
                    source: data,
                    minLength: 0,
