<script type="text/javascript">
    $(document).ready(function () {
        $("#vtabs4").jVertTabs({ equalHeights: true
        });

        index = 0;
        var count = 2;
        //  //add click events for open tab buttons
        $("input[id^=next]").each(function (index) {
            $(this).click(function () {
                if (index > count) {
                    index = 0;

                } else {
                    $("#vtabs4").jVertTabs('selected', index);
                    index++;
                }
            });
        });

    });
</script>
