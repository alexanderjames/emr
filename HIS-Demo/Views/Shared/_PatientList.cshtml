<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
       Remove this if you use the .htaccess -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@Page.Title</title>
    <meta name="description" content="jQuery Mobile Site">
    <meta name="author" content="">
    <!--  Mobile viewport optimized: j.mp/bplateviewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery Mobile Latest Styles -->
    <script src="../../js/libs/jquery.metro.js" type="text/javascript"></script>
    <link href="../../js/libs/jquery.metro.css" rel="stylesheet" type="text/css" />
   
</head>
<body>
    <div data-role="page" data-theme="f" data-add-back-btn="true" @(Page.Id == null ? string.Empty : "id=" + Page.Id)>
        @if (IsSectionDefined("Header"))
        { 
            <div data-role="header" data-theme="a">
                @RenderSection("Header")
            </div>
            <!-- /header -->
        }
        <div data-role="content" data-theme="a" style="margin: 0px; padding: 0px;">
            @RenderBody()
        </div>
        <!-- /content -->
        @if (IsSectionDefined("Footer"))
        { 
            <div data-role="footer"  data-theme="a">
                @RenderSection("Footer")
            </div>
            <!-- /footer -->
        }
        @if (IsSectionDefined("PageScript"))
        { 
            @RenderSection("PageScript")
        }
    </div>
    <!-- /page -->
    @if (IsSectionDefined("OtherPages"))
    { 
        @RenderSection("OtherPages")
    }
    
</body>
</html>
