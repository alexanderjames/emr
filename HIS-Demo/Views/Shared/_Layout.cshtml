<!doctype html>
<head>
    <meta charset="utf-8" />
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
       Remove this if you use the .htaccess -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@Page.Title</title>
    <meta name="description" content="jQuery Mobile Site">
    <meta name="author" content="">
    <!--  Mobile viewport optimized: j.mp/bplateviewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- jQuery Mobile Latest Styles -->
    <link rel="stylesheet" href="@Url.Content("~/css/mobile.css?v=2")" />
    @* // reference the minified version of our combined css based on whether we are in debug mode. *@
    <script src="@Url.Content("~/js/libs/ajaxGoogle.js")"></script>
    <script src="@Url.Content("~/js/libs/jquery.mobile-1.0b1.js")"></script>
</head>
<style type="text/css">
    body
    {
        background: #212121;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        border-radius: 5px;
        height: 100%;
        width: 100%; /* IE10 */
        background-image: -ms-linear-gradient(bottom right, #062B09 0%, #000508 100%); /* Mozilla Firefox */
        background-image: -moz-linear-gradient(bottom right, #062B09 0%, #000508 100%); /* Opera */
        background-image: -o-linear-gradient(bottom right, #062B09 0%, #000508 100%); /* Webkit (Safari/Chrome 10) */
        background-image: -webkit-gradient(linear, right bottom, left top, color-stop(0, #062B09), color-stop(1, #000508)); /* Webkit (Chrome 11+) */
        background-image: -webkit-linear-gradient(bottom right, #062B09 0%, #000508 100%); /* Proposed W3C Markup */
        background-image: linear-gradient(bottom right, #062B09 0%, #000508 100%);
    }
</style>
<style type="text/css">
    #footer
    {
        position: absolute;
        bottom: 0;
        width: 100%; /* Height of the footer */
    }
</style>
<body>
    <div style="height:900px;  color:White" data-role="page" data-theme="f" data-add-back-btn="true" @(Page.Id == null ? string.Empty : "id=" + Page.Id)>
        @if (IsSectionDefined("Header"))
        { 
            <div data-role="header" data-theme="a" data-content-theme="a"  style=" text-align:center;">
              
                  @RenderSection("Header")
                   
                    
            </div>
          
              
           
            <!-- /header -->
        }
        <div data-role="content" data-theme="f" style="margin: 0px; padding: 0px;">
            @RenderBody()
        </div>
        <!-- /content -->
        @if (IsSectionDefined("Footer"))
        { 
            
            @RenderSection("Footer")
             <div data-role="header" data-theme="a" data-content-theme="a" id="footer" style=" text-align:center;">
              
                <h2><a style="text-decoration:none; color:Gray;" href="#">2012 SHIVAM CONSULTANCY & IT SERVICES - All RIGHT RESERVED</a></h2>
                    <a href="@Url.Action("index", "Patient")" data-role="button" data-icon="star" data-theme="e" data-iconpos="notext"></a>
                    
            </div>
           
            <!-- /footer -->
        }
        @if (IsSectionDefined("PageScript"))
        { 
            @RenderSection("PageScript")
        }
    </div>
    <!-- /page -->
    @if (IsSectionDefined("OtherPages"))
    { 
        @RenderSection("OtherPages")
    }
</body>
</html> 