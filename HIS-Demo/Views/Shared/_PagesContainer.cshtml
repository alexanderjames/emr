<script type="text/javascript">
    $(document).ready(function () {

        $(".indexlinks").each(function () {
            $(this).click(function () {
                var actionName = $(this).attr("title");                
                switch (actionName) {
                    case "_ContactUs":
                        $('#light').load("/Home/ContactUs"); break;
                    case "_About":
                        $('#light').load("/Home/IAbout"); break;
                    case "_privacy":
                        $('#light').load("/Home/PP"); break;

                    case "_visit":
                        $('#light').load("/Home/Visit"); break;
                }

            });

        });

    });
</script>